@charset "UTF-8";


*{-webkit-box-sizing:content-box;-moz-box-sizing:content-box;box-sizing:content-box;}

body,p,dl,dt,dd,ol,ul,li,form,input,button,textarea,table,tr,th,td,img,h1,h2,h3,h4,h5,h6{margin:0;padding:0; font: 14px/1.5 'XinGothic-SinaWeibo','Microsoft Yahei','helvetica','arial','黑体';}
ul,ol,li{list-style:none;}
a{text-decoration:none; outline:none; color:#333;}
.clearfix:after{content:'.'; display:block; height:0; visibility:hidden; clear:both;}
.clearfix{zoom:1;}
.lt{float:left;}
.rt{float:right;}
.p_fix{position:fixed;}
.p_rel{position:relative;}
.p_abs{position:absolute;}
.ell{text-overflow:ellipsis; overflow:hidden; white-space:nowrap;}

html, body{width:100%; height:100%;}
body{background:#2185C6; background:-webkit-linear-gradient(#02629F, #42ACF0); -moz-background:linear-gradient(#02629F, #42ACF0); -o-background:linear-gradient(#02629F, #42ACF0); background:linear-gradient(#02629F, #42ACF0);}

.loginBox{position:absolute; left:0; top:0; right:0; bottom:0; width:780px; height:550px; margin:auto;}
.login_hd{height:50px; padding:60px 0 35px; margin-top:-50px; font-size:34px; color:#FFF; font-family:'黑体'; text-align:center; background:url('../img/newlogin_hdbg.png') no-repeat center top; text-shadow:0 0 3px #666;}
.login_bd{height:378px; text-align:left; background:#FFF url('../img/newlogin_lf.png') no-repeat;}
.login_bd .login_lt{width:222px; padding:20px 25px 0 30px; color:#FFF;}
.login_bd .lg_title{font-size:18px; margin-bottom:10px;}
.login_bd .lg_list li{padding-left:20px; line-height:1.8; background:url('../img/newlogin_li_dot.png') no-repeat left center; overflow:hidden; text-overflow:ellipsis; white-space:nowrap;}
.login_bd .lg_list li a{color:#FFF;}
.login_bd .lg_list li a:hover{text-decoration:underline; color:#e8e4bf;}
.login_bd .morelist{text-align:right;}
.login_bd .morelist a{display:inline-block; margin-top:10px; padding:1px 15px; border-radius:5px; background-color:#98A2B2; color:#FFF;}
.login_bd .morelist a:hover{background-color:#abb1bb;}

.login_bd .login_rt{width:340px; padding:20px 85px 0 0;}
.login_bd .login_rt .lg_title{color:#3d93d7; margin-bottom:18px;}
.login_bd .lg_item{margin-bottom:20px;}
.login_bd .lg_item label{display:inline-block; width:70px; color:#749fbc; font-weight:600; font-size:15px;}
.login_bd .lg_item .tb_input{width:84%; padding:12px 3% 12px 13%; border:1px solid #ADB6C9; border-radius:3px; -webkit-border-radius:3px; -moz-border-radius:3px; background:url('../img/newlogin_icon.png') no-repeat; font-size:15px; line-height:1.2em;}
.login_bd .lg_item .tb_inp_name{background-position:12px 12px;}
.login_bd .lg_item .tb_inp_sel{background-position:12px -38px;}
.login_bd .lg_item .tb_inp_pwd{background-position:12px -88px;}
.login_bd .lg_item .tb_chk{width:15px;height:15px; margin-right:5px; vertical-align:sub;}
.login_bd .lg_item .addFavorite a{text-decoration:underline; color:#2E73B8;}
.login_bd .lg_item .addFavorite a:hover{color:#F00;}
.login_bd .lg_item .tb_btn{padding:8px 55px; color:#FFF; font-size:18px; cursor:pointer; border-radius:5px; border:none;}
.login_bd .lg_item .tb_btn_login{background-color:#3D93D7;}
.login_bd .lg_item .tb_btn_reset{background-color:#80B865;}
.login_bd .lg_item .tb_btn_login:hover{background-color:#2878b7;}
.login_bd .lg_item .tb_btn_reset:hover{background-color:#539a31;}

.bottominfo{position:fixed; bottom:0; left:0; width:100%; padding:20px 0; color:#FFF; background-color:#2C8DCB; text-align:center;}
.bottominfo span{margin:0 20px;}

/* 下拉菜单 */
.login_bd .lg_item .selectBox{width:90%; max-height:200px; overflow:auto; padding:10px 5%; border:solid #DEDEDE; border-width:0 1px 1px 1px; border-radius:0 0 3px 3px; background-color:#f9f9f9; box-shadow:0 6px 12px rgba(0,0,0,.175); display:none;}
