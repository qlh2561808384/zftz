h3{
    font-weight: bold;
    text-align: center;
}
html{
    height: 100%;
}
@keyframes openPage {
    from {
        transform: scale(1);
        opacity: 0.3;
    }
    to {
        transform: scale(0.98);
        opacity: 1;
    }
}
@keyframes closePage {
    from {
        transform: scale(0.98);
        opacity: 1;
    }
    to {
        transform: scale(1);
        opacity: 0.3;
    }
}

.layui-layer {
    /*transition: transform 0.3s;*/
    /*transform: scale(1);*/
    transform: scale(0.98);
    /*animation-delay: 2s !important;*/
}
.layer-anim-00 {
    animation-duration: 0.3s !important;
}
.layer-anim-00 {
    animation-name: openPage !important;
}
.layer-anim-close {
    animation-name: closePage !important;
}

